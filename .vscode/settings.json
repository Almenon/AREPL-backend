{
    "python.unitTest.unittestArgs": [
        "-v",
        "-s",
        "./python",
        "-p",
        "*test.py"
    ],
    "python.unitTest.pyTestEnabled": true,
    "python.unitTest.nosetestsEnabled": false,

    "files.exclude": {
        "**/.git": true,
		"**/.DS_Store": true,
        "**/*.js": {"when": "$(basename).ts"},
        "**/*.js.map": {"when": "$(basename).ts"}
    },
	"search.exclude": {
		"out": true, // set this to false to include "out" folder in search results
        "**/*.js": {"when": "$(basename).ts"},
        "**/*.js.map": {"when": "$(basename).ts"}
	},
}